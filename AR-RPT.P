DEFINE SHARED VARIABLE XCOM-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XDIV-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XOPR AS CHAR FORMAT "XXX".
DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE VARIABLE BEG# AS INTEGER FORMAT "ZZZZZZZZZZ"
    LABEL "ENTER BEGINNING CUSTOMER NUMBER".
DEFINE VARIABLE END# AS INTEGER FORMAT "ZZZZZZZZZZ"
    LABEL "ENTER ENDING CUSTOMER NUMBER   ".
DEFINE VARIABLE RPTDATE AS DATE FORMAT "99/99/9999".
IF (USERID = "OPERATIONS") OR (USERID = "LANDMARK") OR (USERID = "GARCIA")
THEN DO:
    MESSAGE "YOU ARE NOT AUTHORIZED TO RUN THIS PROCEDURE".
    RETURN.
END.
DISPLAY SPACE(10)
"R E P O R T   A L L   A C C O U N T   D A T A   S C R E E N         "
SKIP(1) WITH FRAME X.
    UPDATE BEG# WITH ROW FRAME-ROW + 5 + FRAME-LINE + 5 COLUMN 17
       SIDE-LABELS OVERLAY FRAME BEG
       COLOR DISPLAY WHITE/RED PROMPT RED/WHITE.
    UPDATE END# WITH ROW FRAME-ROW + 5 + FRAME-LINE + 5 COLUMN 17
       SIDE-LABELS OVERLAY FRAME EEND
       COLOR DISPLAY WHITE/RED PROMPT RED/WHITE.
  OUTPUT TO PRINTER.
  RPTDATE = TODAY.
  FOR EACH ACCT-RCV WHERE ACCT-RCV.COMP# = XCOM AND
			  ACCT-RCV.DIV# = XDIV AND
			  ACCT-RCV.CUST# >= BEG# AND
			  ACCT-RCV.CUST# <= END#:
    FORM HEADER RPTDATE
		"REPORT ALL DATA FOR CUSTOMER REPORT" AT 22
		"PAGE:" AT 65 PAGE-NUMBER FORMAT ">>9" SKIP(0)
		"COMPANY: " AT 22 XCOM-N SKIP(0)
		"DIVISION: " AT 22 XDIV-N "OPER: " AT 65 XOPR SKIP(2).
    DISPLAY
	    ACCT-RCV.CUST# LABEL "CUSTOMER NUMBER" SPACE(3)
	    ACCT-RCV.COMP# LABEL "COMPANY NUMBER " SKIP(1)
	    C-NAME LABEL "CUSTOMER NAME  " SPACE(4)
	    C-STATUS LABEL "STATUS" SPACE(6)
	    ACCT-RCV.DIV# LABEL "DIVISION NUMBER" SKIP(1)
	    ADDR-1 LABEL "ADDRESS 1" SKIP(1)
	    ADDR-2 LABEL "ADDRESS 2" SKIP(1)
	    ADDR-3 LABEL "ADDRESS 3" SKIP(1)
	    ADDR-4 LABEL "ADDRESS 4" SKIP(1)
	    ADDR-5 LABEL "ADDRESS 5" SKIP(1)
	    STATE LABEL "STATE    " SPACE(8)
	    ZIP SKIP(1)
	    TELE LABEL "TELEPHONE" SKIP(1)
	    PO# LABEL "PO#" SKIP(1)
	    EXP-DATE LABEL "CONTRACT START DATE" SKIP(1)
	    EXPIRE-DT LABEL "EXPIRATION DATE" SKIP(1)
	    COMMENTS LABEL "COMMENTS " SPACE(5)
	    SHRT-NAM LABEL "SHORT NAME" SPACE(2)
	    C-TYPE LABEL "CUSTOMER TYPE......." SKIP(1)
	    OPEN-DT LABEL "OPEN DATE" SPACE(5)
	    STMT-CD LABEL "PRINT STATEMENT? Y/N" SPACE(6)
	    SRVC-CHG LABEL "SERVICE CHARGE? Y/N." SKIP(1)
	    LP-DATE LABEL "PAY DATE." SPACE(5)
	    SLS# LABEL "SALES PERSON........" SPACE(4)
	    CITY-CD LABEL "CITY CODE........." SKIP(1)
	    LST-DATE LABEL "SALE DATE" SPACE(5)
	    TERM-CD LABEL "TERMS CODE.........." SPACE(6)
	    CNTY-CD LABEL "COUNTY CODE......." SKIP(1)
	    BAL-1 LABEL "PERIOD 1 BALANCE" SPACE(2)
	    SLS-YTD LABEL "SALES YTD........." SKIP(1)
	    BAL-2 LABEL "PERIOD 2 BALANCE" SPACE(2)
	    COST-YTD LABEL "COST YTD.........." SKIP(1)
	    BAL-3 LABEL "PERIOD 3 BALANCE" SPACE(2)
	    SRVC-YTD LABEL "SERVICE CHARGE YTD" SKIP(1)
	    BAL-4 LABEL "PERIOD 4 BALANCE" SPACE(2)
	    SLS-LAST LABEL "SALES LAST YEAR..." SKIP(1)
	    FUTR-DUE LABEL "FUTURE BALANCE.." SPACE(2)
	    CST-LAST LABEL "COST LAST YEAR...." SKIP(1)
	    SRVC-DUE LABEL "SERV CHARGE DUE." SPACE(2)
	    TOT-BAL LABEL "TOTAL BALANCE DUE."
	       WITH SIDE-LABELS.
END.
