DEFINE SHARED VARIABLE XCOM-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XDIV-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XOPR AS CHAR FORMAT "XXX".
DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE VARIABLE BEG# AS DECIMAL FORMAT "ZZZZZZZZZZ"
    LABEL "ENTER BEGINNING PROPOSAL NUMBER".
DEFINE VARIABLE END# AS DECIMAL FORMAT "ZZZZZZZZZZ"
    LABEL "ENTER ENDDING PROPOSAL NUMBER  ".
DEFINE VARIABLE RPTDATE AS DATE.
DISPLAY SPACE(10)
"P R O P O S A L   R E P O R T   R E Q U E S T   S C R E E N         "
SKIP(1).
    UPDATE BEG# WITH ROW FRAME-ROW + 5 + FRAME-LINE + 5 COLUMN 17
       SIDE-LABELS OVERLAY FRAME A
       COLOR DISPLAY WHITE/RED PROMPT RED/WHITE.
    UPDATE END# WITH ROW FRAME-ROW + 5 + FRAME-LINE + 5 COLUMN 17
       SIDE-LABELS OVERLAY FRAME B
       COLOR DISPLAY WHITE/RED PROMPT RED/WHITE.
  OUTPUT TO PRINTER.
  RPTDATE = TODAY.
  FOR EACH PROPSL WHERE PROPSL.CUST# >= BEG# AND
			PROPSL.CUST# <= END#:
    FORM HEADER RPTDATE
		"REPORT ALL PROPOSALS FOR GIVEN RANGE" AT 22
		"PAGE:" AT 65 PAGE-NUMBER FORMAT ">>9" SKIP(0)
		"OPER: " AT 65 XOPR SKIP(2).
    DISPLAY
	    PROPSL.PROPSL# LABEL "PROPOSAL"
	    PROPSL.COMP# LABEL "COMPANY #" SPACE(2)
	    PROPSL.DIV# LABEL "DIVISION #" SPACE(2)
	    PROPSL.C-NAME LABEL "CUSTOMER NAME" SPACE(2)
            PROPSL.CUST# LABEL "CUSTOMER #" SPACE(2)
	    PROPSL.DATE-P LABEL "DATE" WITH FRAME C.
END.
