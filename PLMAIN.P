DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XPROG AS LOGICAL.
DEFINE VARIABLE SELECTION AS CHAR FORMAT "X".
REPEAT:
    FORM
	SPACE(10)        "              OLD TYME SOLUTIONS             "
	SKIP(2) SPACE(15) "A.) CREATE NEW PROPOSAL FROM W/P"
	SKIP(0) SPACE(15) "B.) MAINTAIN PROPOSAL OR CONTRACT"
	SKIP(0) SPACE(15) "C.) MAINTAIN PROPOSAL OR CONTRACT DESCRIPTION"
	SKIP(0) SPACE(15) "D.) CREATE NEW PROPOSAL OR CONTRACT"
	SKIP(0) SPACE(15) "E.) CREATE NEW PROPOSAL OR CONTRACT DESCRIPTION"
	SKIP(0) SPACE(15) "F.) ACTIVATE CUSTOMER FROM PROPOSAL OR CONTRACT"
	SKIP(0) SPACE(15) "G.) LIST PROPOSALS OR CONTRACTS"
	SKIP(0) SPACE(15) "H.) DELETE UNWANTED PROPOSALS OR CONTRACTS"
	SKIP(0) SPACE(15) "I.) GENERATE MAILING LABELS"
	SKIP(0) SPACE(15) "J.) TRANSFER PROPOSAL AND DESCRIPTION"
	SKIP(0) SPACE(15) "K.) TRANSFER PROPOSAL FROM CO. 9 TO CO.7"
	SKIP(0) SPACE(15) "L.) TRANSFER PROPOSAL FROM CO. 2 TO CO.9"
	SKIP(0) SPACE(15) "M.) Address Report"
	SKIP(0) SPACE(15) "X.) EXIT"
	WITH CENTERED TITLE
     "P R O P O S A L   &   C O N T R A C T   M A I N   M E N U   S C R E E N".
    UPDATE SKIP(1) SPACE(15) SELECTION AUTO-RETURN
	WITH SIDE-LABELS.
    HIDE.
	IF SELECTION = "A" THEN RUN IN1PROPL.P.
   ELSE IF SELECTION = "B" AND NOT XPROG THEN RUN PLP-CHG.P.
   ELSE IF SELECTION = "B" AND XPROG THEN RUN CNT-CHG.P.
   ELSE IF SELECTION = "C" AND NOT XPROG THEN RUN PLD-CHG.P.
   ELSE IF SELECTION = "C" AND XPROG THEN RUN CNTR-CHG.P.
   ELSE IF SELECTION = "D" AND NOT XPROG THEN RUN PLP-ADD.P.
   ELSE IF SELECTION = "D" AND XPROG THEN RUN CNT-ADD.P.
   ELSE IF SELECTION = "E" AND NOT XPROG THEN RUN PLD-ADD.P.
   ELSE IF SELECTION = "E" AND XPROG THEN RUN CNTR-ADD.P.
   ELSE IF SELECTION = "F" AND NOT XPROG THEN RUN PRO-CUST.P.
   ELSE IF SELECTION = "F" AND XPROG THEN RUN CON-CUST.P.
   ELSE IF SELECTION = "G" AND NOT XPROG THEN RUN PL-RPT.P. 
   ELSE IF SELECTION = "G" AND XPROG THEN RUN CON-RPT.P.
   ELSE IF SELECTION = "H" AND NOT XPROG THEN RUN PRO-DEL.P.
   ELSE IF SELECTION = "H" AND XPROG THEN RUN CON-DEL.P.
   ELSE IF SELECTION = "I" AND NOT XPROG THEN RUN PL-MAIL.P.
   ELSE IF SELECTION = "I" AND XPROG THEN RUN CON-MAIL.P.
   ELSE IF SELECTION = "J" THEN RUN TRANPROP.P.
   ELSE IF SELECTION = "K" THEN RUN TRANPRP7.P.
   ELSE IF SELECTION = "L" THEN RUN TRANPRP9.P.
   ELSE IF Selection = "M" THEN RUN util/addressreport2.p.
   ELSE IF SELECTION = "X" THEN LEAVE.
   ELSE MESSAGE "INCORRECT CHOICE".
END.
