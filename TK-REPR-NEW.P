                          PRO-DESP.DIV# = XDIV AND
                          PRO-DESP.CUST# = F-CUST AND
                          PRO-DESP.PROPSL# = F-PROP AND
                          PRO-DESP.ITEM# = F-ITEM NO-ERROR.
