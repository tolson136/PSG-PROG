DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE VARIABLE XCUST AS DECIMAL FORMAT "ZZZZZZZZZZ".
DEFINE SHARED VARIABLE XCOM-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XDIV-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XOPR AS CHAR FORMAT "XXX".
REPEAT:
DISPLAY SPACE(13)
"A C C O U N T   M A I N T E N A N C E   S C R E E N         (CHG)"
SKIP(0) XCOM-N LABEL "CMP" SPACE(1)
	XDIV-N LABEL "DIV" SPACE(1)
	XOPR LABEL "OPR" SKIP(0).
    PROMPT-FOR ACCT-RCV.CUST#.
    XCUST = INPUT ACCT-RCV.CUST#.
    FIND ACCT-RCV WHERE ACCT-RCV.CUST# = XCUST AND ACCT-RCV.COMP# = XCOM AND
	 ACCT-RCV.DIV# = XDIV.
    IF LASTKEY = KEYCODE("F4") THEN LEAVE.
    DISPLAY
	    ACCT-RCV.CUST# LABEL "CUSTOMER NUMBER" SPACE(3)
	    CURR-PRO LABEL "CURRENT PROPOSAL #"
	    ACCT-RCV.COMP# LABEL "COMPANY NUMBER " SKIP(0)
	    C-NAME LABEL "CUSTOMER NAME  " SPACE(4)
	    C-STATUS LABEL "STATUS" SPACE(6)
	    ACCT-RCV.DIV# LABEL "DIVISION NUMBER" SKIP(0)
	    ADDR-1 LABEL "ADDRESS 1" SPACE(5)
	    L-NAME LABEL "LOC NAME.." SKIP(0)
	    ADDR-2 LABEL "ADDRESS 2" SPACE(5)
	    LADDR-1 LABEL "LOC ADDR 1" SKIP(0)
	    ADDR-3 LABEL "ADDRESS 3" SPACE(5)
	    LADDR-2 LABEL "LOC ADDR 2" SKIP(0)
	    ADDR-4 LABEL "ADDRESS 4" SPACE(5)
	    LADDR-3 LABEL "LOC ADDR 3" SKIP(0)
	    ADDR-5 LABEL "ADDRESS 5" SPACE(5)
	    L-STATE LABEL "LOC STATE " SPACE(2)
	    L-COMMENTS LABEL "LOC COMM." SKIP(0)
	    STATE LABEL "STATE    " SPACE(8)
	    ZIP SPACE(5)
	    L-TELE LABEL "LOC TELEPHONE" SKIP(0)
	    TELE LABEL "TELEPHONE" SPACE(16)
	    EXP-DATE LABEL "CONTRACT EXPIRATION DATE." SKIP(0)
	    COMMENTS LABEL "COMMENTS " SPACE(5)
	    SHRT-NAM LABEL "SHORT NAME" SPACE(2)
	    C-TYPE LABEL "CUSTOMER TYPE......." SKIP(0)
	    OPEN-DT LABEL "OPEN DATE" SPACE(5)
	    STMT-CD LABEL "PRINT STATEMENT? Y/N" SPACE(6)
	    SRVC-CHG LABEL "SRV CHG? Y/N"
	    SRVC-DAYS LABEL "DAYS" SKIP(0)
	    LP-DATE LABEL "PAY DATE." SPACE(5)
	    SLS# LABEL "SALES PERSON........" SPACE(4)
	    CITY-CD LABEL "CITY CODE........." SKIP(0)
	    LST-DATE LABEL "SALE DATE" SPACE(5)
	    TERM-CD LABEL "TERMS CODE.........." SPACE(6)
	    CNTY-CD LABEL "COUNTY CODE......." SKIP(0)
	    BAL-1 LABEL "PERIOD 1 BALANCE" SPACE(2)
	    SLS-YTD LABEL "SALES YTD........." SKIP(0)
	    BAL-2 LABEL "PERIOD 2 BALANCE" SPACE(2)
	    COST-YTD LABEL "COST YTD.........." SKIP(0)
	    BAL-3 LABEL "PERIOD 3 BALANCE" SPACE(2)
	    SRVC-YTD LABEL "SERVICE CHARGE YTD" SKIP(0)
	    BAL-4 LABEL "PERIOD 4 BALANCE" SPACE(2)
	    SLS-LAST LABEL "SALES LAST YEAR..." SKIP(0)
	    FUTR-DUE LABEL "FUTURE BALANCE.." SPACE(2)
	    CST-LAST LABEL "COST LAST YEAR...." SKIP(0)
	    SRVC-DUE LABEL "SERV CHARGE DUE." SPACE(2)
	    TOT-BAL LABEL "TOTAL BALANCE DUE."
	       WITH SIDE-LABELS NO-BOX.
    PROMPT-FOR C-NAME.
    PROMPT-FOR ADDR-1.
    PROMPT-FOR ADDR-2.
    PROMPT-FOR ADDR-3.
    PROMPT-FOR ADDR-4.
    PROMPT-FOR ADDR-5.
    PROMPT-FOR STATE.
    PROMPT-FOR ZIP.
    PROMPT-FOR TELE.
    PROMPT-FOR COMMENTS.
    PROMPT-FOR OPEN-DT.
    PROMPT-FOR LP-DATE.
    PROMPT-FOR LST-DATE.
    PROMPT-FOR CURR-PRO.
    PROMPT-FOR SHRT-NAM.
    PROMPT-FOR STMT-CD.
    PROMPT-FOR SLS#.
    PROMPT-FOR TERM-CD.
    PROMPT-FOR L-NAME.
    PROMPT-FOR LADDR-1.
    PROMPT-FOR LADDR-2.
    PROMPT-FOR LADDR-3.
    PROMPT-FOR L-STATE.
    PROMPT-FOR L-COMMENTS.
    PROMPT-FOR L-TELE.
    PROMPT-FOR EXP-DATE.
    PROMPT-FOR C-TYPE.
    PROMPT-FOR SRVC-CHG.
    PROMPT-FOR SRVC-DAYS.
    PROMPT-FOR CITY-CD.
    PROMPT-FOR CNTY-CD.
    PROMPT-FOR BAL-1.
    PROMPT-FOR BAL-2.
    PROMPT-FOR BAL-3.
    PROMPT-FOR BAL-4.
    PROMPT-FOR FUTR-DUE.
    PROMPT-FOR SRVC-DUE.
    PROMPT-FOR SLS-YTD.
    PROMPT-FOR COST-YTD.
    PROMPT-FOR SRVC-YTD.
    PROMPT-FOR SLS-LAST.
    PROMPT-FOR CST-LAST.
    PROMPT-FOR TOT-BAL WITH COLOR DISPLAY NORMAL PROMPT W/MA.
    ASSIGN ACCT-RCV.
END.
