DEFINE VARIABLE ANS AS LOGICAL LABEL
    "IS THIS INFORMATION CORRECT ?".
DEFINE SHARED VARIABLE XOPR AS CHAR FORMAT "XXX".
DEFINE SHARED VARIABLE CHOICE AS CHAR FORMAT "X".
DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XCOM-N AS CHAR FORMAT "X(30)".
DEFINE SHARED VARIABLE XDIV-N AS CHAR FORMAT "X(30)".
DEFINE NEW SHARED VARIABLE P-PERIOD AS CHAR FORMAT "XXXXXX"
    LABEL "POSTING PERIOD               ".
DEFINE NEW SHARED VARIABLE P-DATE AS DATE FORMAT "99/99/9999"
    LABEL "POSTING DATE                 ".
DEFINE NEW SHARED VARIABLE T-DEBITS AS DECIMAL FORMAT "$->>>,>>>,>>>.99"
    LABEL "COMPARISON TOTAL - DEBITS    ".
DEFINE NEW SHARED VARIABLE T-CREDITS AS DECIMAL FORMAT "$->>>,>>>,>>>.99"
    LABEL "COMPARISON TOTAL - CREDITS   ".
DEFINE NEW SHARED VARIABLE PC-RECPT AS LOGICAL
    LABEL "POST CASH RECEIPTS           ".
DEFINE VARIABLE MN AS CHAR FORMAT "XX".
DEFINE VARIABLE YR AS CHAR FORMAT "XXXX".
DEFINE VARIABLE MNN AS INTEGER FORMAT "99".
DEFINE VARIABLE YRN AS INTEGER FORMAT "9999".
IF (USERID = "OPERATIONS") OR (USERID = "LANDMARK") OR (USERID = "GARCIA")
THEN DO:
    MESSAGE "YOU ARE NOT AUTHORIZED TO RUN THIS PROCEDURE".
    RETURN.
END.
REPEAT:
DISPLAY
"           A / R   P O S T I N G   P A R A M E T E R S   S C R E E N            "
SKIP(1) WITH NO-BOX.
DISPLAY XCOM-N LABEL "CMP" SPACE(1)
	XDIV-N LABEL "DIV" SPACE(1)
	XOPR LABEL "OPR" SKIP(3) WITH NO-BOX.
    UPDATE P-DATE AT 20 SKIP(1) WITH SIDE-LABELS NO-BOX.
    IF LASTKEY = KEYCODE("F4") THEN LEAVE.
    UPDATE MNN = MONTH(P-DATE).
    UPDATE YRN = YEAR(P-DATE).
    MN = STRING(MNN,"99").
    YR = STRING(YRN,"9999").
    UPDATE P-PERIOD = STRING(MN + YR,"XXXXXX").
    UPDATE P-PERIOD AT 20 SKIP(1) WITH
		     SIDE-LABELS NO-BOX.
    UPDATE T-DEBITS AT 20 SKIP(1) WITH SIDE-LABELS NO-BOX.
    UPDATE T-CREDITS AT 20 SKIP(1) WITH SIDE-LABELS NO-BOX.
    UPDATE PC-RECPT AT 20 SKIP(1) WITH SIDE-LABELS NO-BOX.
    UPDATE ANS AT 20 WITH SIDE-LABELS NO-BOX.
    IF ANS THEN
	IF PC-RECPT THEN
	    RUN CASH-RCT.P.
	ELSE
	    RUN POSTING.P.
END.
