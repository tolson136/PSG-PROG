DEFINE SHARED VARIABLE XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XDIV AS INTEGER FORMAT "ZZ".
DEFINE SHARED VARIABLE XPROG AS LOGICAL.
DEFINE VARIABLE SELECTION AS CHAR FORMAT "X".
REPEAT:
    FORM
		"                        OLD TYME SOLUTIONS             "
	SKIP(0)   "A.) ACCOUNT MAINTENANCE"
	SPACE(9)  "J.) CUSTOMER LIST"
	SKIP(1)   "B.) POSTING"
	SPACE(21) "K.) ALPHABETIC CUSTOMER LIST"
	SKIP(1)   "C.) TRIAL BALANCE"
	SPACE(15) "L.) SUB CONTRACTOR REPORT"
	SKIP(1)   "D.) INQUIRY by DATE"
	SPACE(13) "M.) COMMISSION REPORT"
	SKIP(1)   "E.) INQUIRY by INVOICE #"
	SPACE(8)  "N.) ADD SALES PEOPLE"
	SKIP(1)   "F.) ALL ACTIVITY REPORT"
	SPACE(9)  "O.) TRANSFER CUSTOMER"
	SKIP(1)   "G.) AGE ANALYSIS REPORT"
	SPACE(9)  "P.) PRINT ROLODEX CARDS"
	SKIP(1)   "H.) ROLL BALANCES/MONTH END"
	SPACE(5)  "Q.) YEAR END PROCESSING"
	SKIP(1)   "I.) STATEMENT PRINT"
	SPACE(13) "R.) DELETE TRANSACTION HISTORY"
	SKIP(1)   "X.) EXIT"
	WITH CENTERED TITLE
	"A / R   M A I N   M E N U   S C R E E N".
    UPDATE SPACE(11) SELECTION AUTO-RETURN
	WITH SIDE-LABELS.
    HIDE.
	IF SELECTION = "A" THEN RUN SETUPMEN.P.
   ELSE IF SELECTION = "B" THEN RUN AR-POST.P.
   ELSE IF SELECTION = "C" THEN RUN AR-TRIAL.P.
   ELSE IF SELECTION = "D" THEN RUN AR-INQ.P.
   ELSE IF SELECTION = "E" THEN RUN AR-WINQ.P.
   ELSE IF SELECTION = "F" THEN RUN AR-ACTIV.P.
   ELSE IF SELECTION = "G" THEN RUN AR-AGE.P.
   ELSE IF SELECTION = "H" THEN RUN AR-ROLL.P.
   ELSE IF SELECTION = "I" THEN RUN AR-STATE.P.
   ELSE IF SELECTION = "J" THEN RUN C-LIST.P.
   ELSE IF SELECTION = "K" THEN RUN A-LIST.P.
   ELSE IF SELECTION = "L" THEN RUN AR-SUB.P.
   ELSE IF SELECTION = "M" THEN RUN AR-COM.P.
   ELSE IF SELECTION = "N" THEN RUN SALE-MNT.P.
   ELSE IF SELECTION = "O" THEN RUN AR-TRF.P.
   ELSE IF SELECTION = "P" AND NOT XPROG THEN RUN AR-RDEX.P.
   ELSE IF SELECTION = "P" AND XPROG THEN RUN AR-RDEXP.P.
   ELSE IF SELECTION = "Q" THEN RUN AR-YEND.P.
   ELSE IF SELECTION = "R" THEN RUN AR-DELHS.P.
   ELSE IF SELECTION = "X" THEN LEAVE.
   ELSE MESSAGE "INCORRECT CHOICE".
END.
