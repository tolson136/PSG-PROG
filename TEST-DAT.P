DEFINE VARIABLE D1 AS DATE LABEL "DATE".
DEFINE VARIABLE D2 AS DECIMAL FORMAT "9999.99".
DEFINE VARIABLE D3 AS DECIMAL FORMAT "9999".
DEFINE VARIABLE D4 AS DECIMAL FORMAT "9999.99".
REPEAT:
SET D1.
D2 = YEAR(D1) / 4.
D3 = TRUNCATE(D2, 0).
D4 = D3.
DISPLAY D2 D3 D4.
IF D4 = D2 THEN DISPLAY "LEAP YEAR".
IF D4 <> D2 THEN DISPLAY "NOT LEAP YEAR".
DISPLAY DAY(D1).
END.
