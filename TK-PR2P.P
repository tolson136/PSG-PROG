	      STRING(METDESC.COMP#, ">>") + "-" +
	      TRIM(STRING(METDESC.DIV#, ">>")) + "-" +
	      TRIM(STRING(METDESC.CUST#, ">>>>>>>>>>")) + "-" +
	      TRIM(STRING(METDESC.PROPSL#, ">>>>>>>>>>")) + "-" +
	      TRIM(STRING(METDESC.ITEM#, ">>>>")) + "-" +
	      TRIM(STRING(BEG#, ">>")) + "-" +
	      TRIM(STRING(DY, ">>"))
	      FORMAT "X(25)" SPACE(43)
	      METDESC.P-DL FORMAT "$->>>,>>>.99" SKIP(1)
	      WITH FRAME H2 NO-BOX NO-LABELS.
	   END.
       END.
      ELSE DO:
      T-DL = T-DL + METDESC.S-DL.
      IF BIRD-SONG THEN DO:
      DISPLAY ACCT-RCV.C-NAME SPACE(10)
	      METPRO.L-NAME SKIP(0)
	      HAR-DESP SKIP(0)
	      STRING(METDESC.COMP#, ">>") + "-" +
