      REPEAT DY = 1 TO TICKS:
    IF PRIV THEN DO:
      T-DL = T-DL + METDESC.P-DL.
      IF BIRD-SONG THEN DO:
      DISPLAY ACCT-RCV.C-NAME SPACE(10)
