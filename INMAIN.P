DEFINE VARIABLE SELECTION AS CHAR FORMAT "X".
DEF SHARED VAR XPROG AS LOGICAL.
DEF SHARED VAR XOPR AS CHAR FORMAT "XXX".
IF (USERID = "OPERATIONS") OR (USERID = "LANDMARK") OR (USERID = "GARCIA")
THEN DO:
    MESSAGE "YOU ARE NOT AUTHORIZED TO RUN THIS PROCEDURE".
    RETURN.
END.
REPEAT:
    FORM
                "              Program One  (inmain.p) "
        SKIP(1) "A.) GENERATE ORDERS FROM COMPLETED JOB ORDERS"
        SKIP(0) "B.) PRINT JOB ORDER AUDIT LIST"
        SKIP(1) "C.) GENERATE SINGLE JOB ORDER"
        SKIP(0) "D.) MAINTAIN SINGLE JOB ORDER"
        SKIP(0) "E.) DELETE JOB ORDERS"
        SKIP(1) "F.) PRINT INVOICES FROM JOB ORDERS"
        SKIP(0) "G.) REPRINT AN INVOICE"
        SKIP(0) "H.) TRANSFER PRINTED INVOICES TO A/R"
        SKIP(1) "I.) ADD NEW CUST/INV DESCRIPTIONS"
        SKIP(0) "J.) MAINTAIN CUST/INV DESCRIPTIONS"
        SKIP(0) "K.) DELETE CUST/INV DESCRIPTIONS"
        SKIP(1) "X.) EXIT"
        WITH CENTERED TITLE
        "M O N T H L Y   I N V O I C E   P R O C E S S I N G   S C R E E N".
    UPDATE SKIP(1) SPACE(1) SELECTION AUTO-RETURN
        WITH SIDE-LABELS.
    HIDE.
        IF SELECTION = "A" AND NOT XPROG THEN RUN IN-CRE.P.
   ELSE IF SELECTION = "A" AND XPROG THEN RUN IN-CREP.P.
   ELSE IF SELECTION = "B" AND NOT XPROG THEN RUN IN-RPT.P.
   ELSE IF SELECTION = "B" AND XPROG THEN RUN IN-RPTP.P.
   ELSE IF SELECTION = "C" AND NOT XPROG THEN RUN IN-ADD.P.
   ELSE IF SELECTION = "C" AND XPROG THEN RUN IN-ADDP.P.
   ELSE IF SELECTION = "D" AND NOT XPROG THEN RUN IN-CHG.P.
   ELSE IF SELECTION = "D" AND XPROG THEN RUN IN-CHGP.P.
   ELSE IF SELECTION = "E" AND NOT XPROG THEN RUN IN-DEL.P.
   ELSE IF SELECTION = "E" AND XPROG THEN RUN IN-DELP.P.
   ELSE IF SELECTION = "F" AND NOT XPROG THEN RUN IN-PRO.P.
   ELSE IF SELECTION = "F" AND XPROG THEN RUN IN-PROP.P.
   ELSE IF SELECTION = "G" AND NOT XPROG THEN RUN IN-REPRO.P.
   ELSE IF SELECTION = "G" AND XPROG THEN RUN IN-REPRP.P.
   ELSE IF SELECTION = "H" AND NOT XPROG THEN RUN IN-TRF.P.
   ELSE IF SELECTION = "H" AND XPROG THEN RUN IN-TRFP.P.
   ELSE IF SELECTION = "I" AND NOT XPROG THEN RUN IND-ADD.P.
   ELSE IF SELECTION = "I" AND XPROG THEN RUN IND-ADDP.P.
   ELSE IF SELECTION = "J" AND NOT XPROG THEN RUN IND-CHG.P.
   ELSE IF SELECTION = "J" AND XPROG THEN RUN IND-CHGP.P.
   ELSE IF SELECTION = "K" AND NOT XPROG THEN RUN IND-DEL.P.
   ELSE IF SELECTION = "K" AND XPROG THEN RUN IND-DELP.P.
   ELSE IF SELECTION = "X" THEN LEAVE.
   ELSE MESSAGE "INCORRECT CHOICE " SELECTION.
END.
