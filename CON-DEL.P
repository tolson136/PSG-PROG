DEFINE SHARED VAR XCOM AS INTEGER FORMAT "ZZ".
DEFINE SHARED VAR XDIV AS INTEGER FORMAT "ZZ".
DEFINE VAR PRO-BEG AS DECIMAL FORMAT "ZZZZZZZZZZ".
DEFINE VAR PRO-END AS DECIMAL FORMAT "ZZZZZZZZZZ".
DEFINE VAR HOLD-PRO AS DECIMAL FORMAT "9999999999".
DEFINE VAR CNT AS INTEGER FORMAT "ZZZZZ"
    LABEL "NUMBER OF CONTRACTS DELETED ".
IF (USERID = "OPERATIONS") OR (USERID = "LANDMARK") OR (USERID = "GARCIA")
THEN DO:
    MESSAGE "YOU ARE NOT AUTHORIZED TO RUN THIS PROCEDURE".
    RETURN.
END.
DISPLAY SPACE(16)
"C O N T R A C T   D E L E T I O N   S C R E E N" SKIP(0)
    "COMPANY: " XCOM SPACE(29) "DIVISION: " XDIV SKIP(4)
    WITH NO-BOX NO-LABELS.
UPDATE SKIP(1) PRO-BEG LABEL "ENTER FIRST CONTRACT # TO DELETE"
    WITH NO-BOX SIDE-LABELS.
UPDATE SKIP(1) PRO-END LABEL "ENTER LAST CONTRACT # TO DELETE"
    WITH NO-BOX SIDE-LABELS.
IF LASTKEY = KEYCODE("F4") OR LASTKEY = KEYCODE("ESC") THEN LEAVE.
CNT = 0.
FOR EACH METPRO WHERE METPRO.COMP# = XCOM AND
			METPRO.DIV# = XDIV AND
			METPRO.PROPSL# >= PRO-BEG AND
			METPRO.PROPSL# <= PRO-END:
	    HOLD-PRO = METPRO.PROPSL#.
	    DELETE METPRO.
FOR EACH METDESC WHERE METDESC.COMP# = XCOM AND
			METDESC.DIV# = XDIV AND
			METDESC.PROPSL# = HOLD-PRO:
	    DELETE METDESC.
	    CNT = CNT + 1.
END.
END.
	    CLEAR FRAME A NO-PAUSE.
	    DISPLAY CNT WITH FRAME A NO-BOX SIDE-LABELS.
