DEFINE VARIABLE SELECTION AS CHAR FORMAT "X".
DEFINE SHARED VARIABLE XPROG AS LOGICAL.
REPEAT:
    FORM
                "                        OLD TYME SOLUTIONS             "
SKIP(0)
    "A.) GENERATE MONTHLY TICKETS       M.) GENERATE ROLLING VOLUME LIST"
SKIP(0)
    "B.) ENTER RETURNED TICKETS         N.) ROLLING VOLUME LIST by SUB & ROUTE"
SKIP(0)
    "C.) ADD SINGLE TICKET              O.) GENERATE DIRECT LABOR LIST"
SKIP(0)
    "D.) CHANGE SINGLE TICKET           P.) UPDATE EMPLOYEES"
SKIP(0)
    "E.) DELETE SINGLE TICKET           Q.) GENERATE SPECIAL CLEANING RPT"
SKIP(0)
    "F.) DELETE RANGE OF TICKETS        R.) LAST CLEANING DATE REPORT"
SKIP(0)
    "G.) REPRINT TICKET                 S.) OUTSTANDING D/L TICKET REPORT"
SKIP(0)
    "H.) OUTSTANDING TICKET REPORT      T.) OUTSTANDING D/L by LOC REPORT"
SKIP(0)
    "I.) GENERATE PAYROLL INFO RPT      U.) OUTSTANDING D/L by SUB & ROUTE"
SKIP(0)
    "J.) DELETE TICKET HISTORY          V.) Upcoming Proposal Expiration"
SKIP(0)
    "K.) ARCHIVE CONTRACT TICKETS       W.) ARCHIVE REPORT"
SKIP(0)
    "L.) GENERATE WEEKLY PAYROLL RPT    Y.) COMPLETED TICKET REPORT"
SKIP(0)
    "                                   Z.) --W-- STATUS TICKET REPORT"
SKIP(2)
    "X.) EXIT"
        WITH CENTERED TITLE
        "M O N T H L Y   T I C K E T   M A I N   M E N U   S C R E E N".
    UPDATE  SPACE(7) SELECTION AUTO-RETURN
        WITH SIDE-LABELS.
    HIDE.
        IF SELECTION = "A" THEN RUN TK-CRE.P.
   ELSE IF SELECTION = "B" AND NOT XPROG THEN RUN TK-RET.P.
   ELSE IF SELECTION = "B" AND XPROG THEN RUN TK-RETC.P.
   ELSE IF SELECTION = "C" THEN RUN TK-ADD.P.
   ELSE IF SELECTION = "D" THEN RUN TK-CHG.P.
   ELSE IF SELECTION = "E" THEN RUN TK-DEL.P.
   ELSE IF SELECTION = "F" THEN RUN TK-RNG.P.
   ELSE IF SELECTION = "G" THEN RUN TK-REP.P.
   ELSE IF SELECTION = "H" THEN RUN TK-INC.P.
   ELSE IF SELECTION = "I" THEN RUN PAY-CALC.P.
   ELSE IF SELECTION = "J" THEN RUN TK-DELTK.P.
   ELSE IF SELECTION = "K" AND XPROG THEN RUN TK-METAR.P.
   ELSE IF SELECTION = "L" THEN RUN TK-PRO.P.
   ELSE IF SELECTION = "M" AND NOT XPROG THEN RUN TK-PR1.P.
   ELSE IF SELECTION = "M" AND XPROG THEN RUN TK-PR1P.P.
   ELSE IF SELECTION = "N" THEN RUN TK-RVSR.P.
   ELSE IF SELECTION = "O" AND NOT XPROG THEN RUN TK-PR2.P.
   ELSE IF SELECTION = "O" AND XPROG THEN RUN TK-PR2P.P.
   ELSE IF SELECTION = "P" THEN RUN EMP-UPD.P.
   ELSE IF SELECTION = "Q" THEN RUN TK-CLEN.P.
   ELSE IF SELECTION = "R" AND NOT XPROG THEN RUN TK-LAST.P.
   ELSE IF SELECTION = "R" AND XPROG THEN RUN TK-LASTP.P.
   ELSE IF SELECTION = "S" THEN RUN TK-DLOUT.P.
   ELSE IF SELECTION = "T" THEN RUN TK-DLLOC.P.
   ELSE IF SELECTION = "U" THEN RUN TK-DLSUB.P.
   ELSE IF SELECTION = "V" THEN RUN PropslExp.w.
   ELSE IF SELECTION = "W" AND XPROG THEN RUN TK-METRP.P.
   ELSE IF SELECTION = "Y" THEN RUN TK-COMP.P.
   ELSE IF SELECTION = "Z" THEN RUN TK-WOMP.P.
   ELSE IF SELECTION = "X" THEN LEAVE.
   ELSE MESSAGE "INCORRECT CHOICE".
END.
